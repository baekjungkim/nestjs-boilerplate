enum UserRole {
  SUPER_ADMIN // 최고 관리자 (모든 권한)
  ADMIN // 관리자 (대부분의 권한)
  MANAGER // 매니저 (제한된 관리 권한)
  STAFF // 스태프 (기본적인 관리 권한)
  USER // 일반 사용자
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(USER) // 추가
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
